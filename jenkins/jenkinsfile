pipeline {
    agent {
        kubernetes {
            label 'jenkins-agent'
            yaml """
            apiVersion: v1
            kind: Pod
            spec:
              containers:
              - name: jnlp
                image: jenkins/inbound-agent
                args: ['\$(JENKINS_SECRET)', '\$(JENKINS_NAME)']
              - name: docker
                image: docker:20.10
                command:
                - cat
                tty: true
              - name: node
                image: node:14
                command:
                - cat
                tty: true
            """
        }
    }
    environment {
        GIT_CREDENTIALS_ID = 'github-token' 
    }
    
    stages {
        stage('git clone') {
            steps {
                git credentialsId: env.GIT_CREDENTIALS_ID, branch: 'main', url: 'https://github.com/minhooooo/kube-employment-frontend.git'
            }
        }
        
        stage('Build Docker Image') {
            steps {
                script {
                    def customImage = docker.build("kube-employment-frontend:${env.BUILD_ID}")
                }
            }
        }
        
        stage('Test') {
            steps {
                script {
                    docker.image("kube-employment-frontend:${env.BUILD_ID}").inside {
                        sh 'echo "Running tests..."'
                        sh 'echo "image build..."'
                    }
                }
                echo 'Testing..'
            }
        }
        
        stage('Execute') {
            steps {
                script {
                    docker.image("kube-employment-frontend:${env.BUILD_ID}").inside {
                        sh 'echo "Executing application..."'
                        sh 'echo "testing tests..."'                    }
                }
                echo 'executing..'
            }
        }        
    }
}
